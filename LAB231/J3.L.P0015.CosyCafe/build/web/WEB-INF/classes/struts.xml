"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="index" class="Controller.HomeAction"> 
            <result>home.jsp</result>          
        </action>
        <action name="about" class="Controller.AboutAction"> 
            <result name="success">about.jsp</result>        
        </action>
        <action name="find" class="Controller.FindAction"> 
            <result name="success">find.jsp</result>        
        </action>
    </package>
</struts>
